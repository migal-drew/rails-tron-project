<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row" align='center'>
  <div class="span6">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :email %>
      <div class="input-prepend">
        <span class="add-on"><i class="icon-envelope"></i></span>
        <%= f.text_field :email %>
      </div>
      <div class="input-prepend">
        <%= f.label :password %>
        <span class="add-on"></span>
        <%= f.password_field :password %>
      </div>
      <br><br>
      <%= f.submit "Sign in", class: "btn btn-custom btn-large" %>
    <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
  <div class="span6">
    <table>
      <tr><td>
        <blockquote class="pull-right">
          <p>The most outstanding game EVER! 6/5</p>
          <small>Super Geeky Games Magazine</small>
        </blockquote>
      </td></tr>
      <tr><td>
        <blockquote class="pull-right">
          <p>.... 10/10</p>
          <small>....</small>
        </blockquote> 
      </td></tr>
      
    </table>
  </div>

  
      
</div>

