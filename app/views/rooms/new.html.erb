  <br><br>
  <!--<%= text_field_tag(:max) %> -->

  <p><%= label_tag(:map, class: "form-control") %></p>
  <%= select_tag(:map_id, options_for_select(@maps)) %>
  <br><br>
	<p>
    <%= submit_tag 'Create', :controller => "action", :rooms => "create", :method => "post", class: "btn btn-default btn-lg" %>
    <br><br>
	</p>
<% end %>


