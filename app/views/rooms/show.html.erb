<body>
	<h1>Game room # <%= @room_ht["room_id"] %></h1>

	<!--<%= link_to 'Back', rooms_path %><br><br>-->

	<% if is_admin?(@room_ht) %>
		<p>You're an admin</p>
		<%= link_to 'Destroy', room_path(@room), method: :delete, :confirm => "Are you sure?" %>
	<% else %>
		<% unless @room_ht["players"].include? current_user.id.to_s %>
			<% r_id = @room_ht["room_id"] %>
			<%= form_tag( {:controller => :rooms, :action => :update,
				:id => r_id}, {:method => :put} ) do %>
				<%= hidden_field_tag :purpose, "join" %>
				<%= submit_tag 'Join' %>
			<% end %>
		<% else %>
			<% r_id = @room_ht["room_id"] %>
			<%= form_tag( {:controller => :rooms, :action => :update,
				:id => r_id}, {:method => :put} ) do %>
				<%= hidden_field_tag :purpose, "unjoin" %>
				<%= submit_tag 'Disconnect' %>
			<% end %>
		<% end %>
	<% end %>

	
	<br><br>
	<%= @room_ht["players"] %>
	<!--<%= @players.to_json %> -->
	<table class="table table-striped">
		<tr>
			<td>Player's name</td>
			<td>Color</td>
			<td>Status</td>
			<td>Bike's number</td>
		</tr>
		<% @players.each do |pl| %>
			<% unless pl.nil? %>
				<tr>
					<% pl_ht = JSON.parse(pl) %>
					<td><%= pl_ht["nickname"] %></td>
					<td><%= pl_ht["color"] %></td>
					<td><%= pl_ht["state"] %></td>
					<td><%= pl_ht["bike_num"] %></td>
				</tr>
			<% end -%>
		<% end %>
	</table>


<%= debug params %>	
</body>